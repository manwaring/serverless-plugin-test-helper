{
  "name": "serverless-plugin-test-helper",
  "description": "A utility library to help with testing deployed serverless applications",
  "version": "3.0.0",
  "scripts": {
    "publish-please-dry-run": "publish-please --dry-run",
    "publish-please": "publish-please",
    "prepublishOnly": "publish-please guard && npm run build",
    "build2": "rimraf dist && tsc -p ./tsconfig.build.json",
    "postbuild": "ncp src/index.d.ts dist/index.d.ts",
    "test": "jest --coverage",
    "pretest": "rimraf .test-output .serverless dist",
    "posttest": "rimraf .test-output .serverless .test*",
    "codecov": "codecov -f coverage/*.json",
    "testexamples-custom-ts": "cd examples/custom-ts && rm -rf node_modules package-lock.json && npm i && npm run deploy && npm test",
    "testexamples-default-ts": "cd examples/default-ts && rm -rf node_modules package-lock.json && npm i && npm run deploy && npm test",
    "testexamples-default-js": "cd examples/default-js && rm -rf node_modules package-lock.json && npm i && npm run deploy && npm test"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "js-yaml": "^3.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/aws-lambda": "^8.10.62",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^14.10.2",
    "aws-lambda": "^1.0.6",
    "babel-jest": "^26.3.0",
    "codecov": "^3.7.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lodash.clonedeep": "^4.5.0",
    "ncp": "^2.0.0",
    "publish-please": "^5.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run build"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manwaring/serverless-plugin-test-helper.git"
  },
  "bugs": {
    "url": "https://github.com/manwaring/serverless-plugin-test-helper"
  },
  "homepage": "https://github.com/manwaring/serverless-plugin-test-helper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "author": "From Phillip with â™¥",
  "license": "MIT",
  "keywords": [
    "serverless",
    "plugin",
    "testing",
    "library",
    "helper"
  ]
}
